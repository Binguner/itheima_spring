<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:util="http://www.springframework.org/schema/util"
       xmlns:context="http://www.springframework.org/schema/context"
       xmlns:mvc="http://www.springframework.org/schema/cache"

       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-2.0.xsd
                           http://www.springframework.org/schema/util http://www.springframework.org/schema/util/spring-util-2.0.xsd http://www.springframework.org/schema/context http://www.springframework.org/schema/context/spring-context.xsd http://www.springframework.org/schema/cache http://www.springframework.org/schema/cache/spring-cache.xsd">

<!--    <context:component-scan base-package="com.itheima.controller"/>-->
<!---->
<!--    <mvc:annotation-driven/>-->

    <!--    配置处理器 Handle，映射 "/firstController" 请求-->
    <bean name="/firstController" class="com.itheima.controller.FirstController"/>

    <!--    处理器映射器，将处理器 Handler 的 name 作为 url 进行查找-->
    <bean class="org.springframework.web.servlet.handler.BeanNameUrlHandlerMapping"/>

    <!--    处理适配器，配置对处理器中 handleRequest() 方法的调用-->
    <bean class="org.springframework.web.servlet.mvc.SimpleControllerHandlerAdapter"/>

    <!--    视图解析器-->
    <bean class="org.springframework.web.servlet.view.InternalResourceViewResolver">
<!--        <property name="prefix" value="/WEB-INF/"/>-->
<!--        <property name="suffix" value=".jsp"/>-->
    </bean>


</beans>
